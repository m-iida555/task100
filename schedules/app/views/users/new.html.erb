

<h3>スケジュール新規作成</h3>
<%= form_for @user do |f| %>
<table>
  <tr>
   <th><%= f.label :title ,"タイトル" %></th>
   <td><%= f.text_field :title %></td>
  </tr>
  <tr>
    <th><%= f.label :start ,"開始" %></th>
    <td><%= f.date_field :start %></td>
  </tr>
  <tr>
    <th><%= f.label :end ,"終了" %></th>
    <td><%= f.date_field :end %></td>
  </tr>
  <tr>
    <th><%= f.label :check ,"終日" %></th>
    <td>
      <%= f.check_box :check, id: :user_check,:as => :boolean %>
      <%= f.label :check ,"終日の場合はチェックを入れます" %>
    </td>
  </tr>
  <tr>
    <th><%= f.label :memo ,"スケジュールメモ" %></th>
    <td><%= f.text_field :memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= f.submit "スケジュールを新規登録する" %></li>
    <li><%= link_to "スケジュール一覧に戻る" ,:users %></li>
   </li>
 </ul>
</div>
<% end %>
